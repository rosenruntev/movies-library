<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchTitle"
        android:hint="Title"
        android:inputType="text" />
    <Button
        android:id="@+id/searchMovieButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Movie" />
    <TextView
        android:id="@+id/foundMovieTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:id="@+id/foundMovieType"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/foundMovieGenre"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/foundMovieReleased"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/foundMovieDirector"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/foundMovieCountry"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/foundMovieRating"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/foundMoviePlot"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
</LinearLayout>